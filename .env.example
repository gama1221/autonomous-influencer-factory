# .env.example
# Project Chimera - Environment Configuration
# Copy this file to .env and fill in the values

# ====================
# Core Configuration
# ====================

# Application Environment
ENVIRONMENT=development
# Options: development, staging, production
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
SECRET_KEY=your-secret-key-here-change-in-production
# Generate with: openssl rand -hex 32

# ====================
# Database Configuration
# ====================

# PostgreSQL Connection
DATABASE_URL=postgresql://chimera:chimera@localhost:5432/chimera
# Production format: postgresql://user:password@host:port/database
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ====================
# External Services
# ====================

# OpenClaw Network Integration
OPENCLAW_API_KEY=your-openclaw-api-key
OPENCLAW_ENDPOINT=https://api.openclaw.net/v1

# Tenx MCP Sense Telemetry
TENX_MCP_SENSE_KEY=your-tenx-mcp-sense-key
TENX_MCP_SENSE_ENDPOINT=wss://sense.tenx.dev/ws

# Social Media APIs (Development only - use real keys in production)
YOUTUBE_API_KEY=your-youtube-api-key
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret

# ====================
# Agent Configuration
# ====================

# Agent Execution Limits
AGENT_CONCURRENCY_LIMIT=10
AGENT_TIMEOUT_SECONDS=300
AGENT_MEMORY_LIMIT_MB=512

# Skill Execution
SKILL_RETRY_ATTEMPTS=3
SKILL_TIMEOUT_SECONDS=30
SKILL_RATE_LIMIT_PER_MINUTE=60

# ====================
# Storage Configuration
# ====================

# S3 Compatible Storage (MinIO for development, AWS S3 for production)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=chimera-media
S3_REGION=us-east-1

# Redis for Caching and Queue
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20

# ====================
# Monitoring & Observability
# ====================

# OpenTelemetry
OTLP_ENDPOINT=http://localhost:4318
ENABLE_TRACING=true
ENABLE_METRICS=true

# Prometheus Metrics
METRICS_PORT=9090

# Sentry Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn

# ====================
# Content Generation
# ====================

# OpenAI / Anthropic / Local LLM
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
LOCAL_LLM_ENDPOINT=http://localhost:8080

# Content Safety
CONTENT_SAFETY_THRESHOLD=0.8
ENABLE_CONTENT_MODERATION=true

# ====================
# Deployment Configuration
# ====================

# Docker Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_TAG=latest

# Kubernetes
K8S_NAMESPACE=chimera
K8S_REPLICA_COUNT=3

# ====================
# Development & Testing
# ====================

# Testing
TEST_DATABASE_URL=postgresql://chimera_test:chimera_test@localhost:5433/chimera_test
TEST_S3_ENDPOINT=http://localhost:9001

# Development Tools
UV_PYTHON=python3.11
UV_CACHE_DIR=.uv_cache